@using Food_Mania.Models.Dtos
@model StaffDto

@{
    Layout = "~/Views/Shared/_SecondLayOut.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <h2>Update Staff</h2>
        <form asp-action="Update" >
            <div class="form-group">
                <label for="w">First Name</label>
                <input for="FirstName" type="text" name="FirstName" id="FirstName"
                    class="form-control" value="@Model.User.FirstName" />
            </div>
            <div class="form-group">
                <label for="LastName">Last Name</label>
                <input type="text" name="LastName" id="LastName" class="form-control"  value="@Model.User.LastName"/>
            </div>
            <div class="form-group">
                <label for="PhoneNumber">Phone Number</label>
                <input type="number" name="PhoneNumber" id="phone" class="form-control"
                    value="@Model.User.PhoneNumber" />
            </div>
            <div class="form-group">
                <label for="Email">Email</label>
                <input type="email" name="Email" id="email" class="form-control"
                    value="@Model.User.Email" />
            </div>
            <div class="form-group">
                <label for="Role">Role</label>
                <select name="Role" class="form-control">
                    <option value="none" disabled>--select role--</option>
                    @* <option value="1">Manager</option> *@
                    <option value="2">Cook</option>
                    <option value="3">Cleaner</option>
                    <option value="4">Transporter</option>
                </select>
            </div>
            <div class="form-group">
                <label for="DathOfBirth">Date of Birth</label>
                <input type="date" name="DathOfBirth" id="DateOfBirth" class="form-control"
                    value="@Model.DathOfBirth" />
            </div>
           
            <button type="submit">Update</button>
        </form>
    </div>
</div>
