@using Food_Mania.Models.Dtos
@model FoodDto
@{
    Layout = "~/Views/Shared/_SecondLayOut.cshtml";
}
    <div class="row">
        <div class="col-md-12">
            <h2>Update Food</h2>
            <form asp-action="UpdateFood" method="post" asp-controller="Food"  enctype="multipart/form-data">
                @* <div class="form-group">
                    <label for="Type">Type</label>
                    <input for="Type" type="text" name="Type" id="Type" class="form-control"value="@Model.Type" />
                </div> *@
                 <div class="form-group">
                    <label for="Price">Price</label>
                    <input type="number" name="Price" id="Price" class="form-control" value="@Model.Price"/>
                </div>
                 <div class="form-group">
                    <label for="NumberOfPlates" class="control-label">NumberOfPlates</label>
                    <input type="number" name="NumberOfPlates" id="NumberOfPlates" class="form-control" value="@Model.NumberOfPlates">
                </div>
                 <div class="form-group">
                    <label for="Description">Description</label>
                    <input type="text" name="Description" id="Description" class="form-control" value="@Model.Description"/>
                </div>
                 <div class="form-group">
                    <label for="ImageUrl">ImageUrl</label>
                    <input type="file" name="ImageUrl" id="ImageUrl" class="form-control" value="@Model.Image"/>
                </div>
                <div class="form-group">
                 <label for="Status">Status</label>
                 <select name="Status" class="form-control">
                 <option value="none" disabled>--select Status--</option>
                 <option value="1">Available</option>
                 <option value="2" >Processing</option>
                 <option value="3" >NotAvailable</option>
                 </select>
                 </div>
                 <div class="form-group">
                    <label for="AvailableTime">AvailableTime</label>
                    <input type="datetime-local" name="AvailableTime" id="AvailableTime" class="form-control" value="@Model.AvailableTime"/>
                </div>
                
                <button type="submit">Update</button>
            </form>
        </div>
    </div>
